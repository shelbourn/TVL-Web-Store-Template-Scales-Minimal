{"components/collection/collection-sorting":"{{#if collection.products}}\n  <nav class=\"product-collection-filter-sort {{#if collection.faceted_search_enabled}}filters-enabled{{/if}}\">\n    {{#if collection.faceted_search_enabled}}\n      <div class=\"product-collection-filtering\">\n        <button class=\"filter-toggle-wrapper\" data-filter-toggle>\n          <span class=\"filter-icon\">\n            <svg><use xlink:href=\"#icon-list\"></use></svg>\n          </span>\n\n          <span class=\"filter-label\">{{lang 'filter.toggle'}}</span>\n        </button>\n\n        <button class=\"filter-clear-all\" data-facet-remove-all>{{lang 'faceted_search.clear'}}</button>\n      </div>\n    {{/if}}\n\n    {{#if show_sort}}\n      <div class=\"product-collection-sorting\">\n        <form method=\"get\" data-sort-by>\n          <div class=\"form-field form-field-product-sort form-field-select\">\n            <label class=\"form-label\">\n              <span class=\"form-field-title\">\n                {{lang 'sorter.sort_by'}}\n              </span>\n              <span class=\"form-field-control\">\n                <span class=\"form-select-wrapper\">\n                  <select class=\"form-input form-select\" name=\"sort\">\n                    <option value=\"featured\" {{#if sort '===' 'featured'}}selected{{/if}}>{{lang 'sorter.featured'}}</option>\n                    <option value=\"newest\" {{#if sort '===' 'newest'}}selected{{/if}}>{{lang 'sorter.newest'}}</option>\n                    <option value=\"bestselling\" {{#if sort '===' 'bestselling'}}selected{{/if}}>{{lang 'sorter.top_sellers'}}</option>\n                    <option value=\"alphaasc\" {{#if sort '===' 'alphaasc'}}selected{{/if}}>{{lang 'sorter.alpha_asc'}}</option>\n                    <option value=\"alphadesc\" {{#if sort '===' 'alphadesc'}}selected{{/if}}>{{lang 'sorter.alpha_desc'}}</option>\n                    <option value=\"avgcustomerreview\" {{#if sort '===' 'avgcustomerreview'}}selected{{/if}}>{{lang 'sorter.reviews'}}</option>\n                    <option value=\"priceasc\" {{#if sort '===' 'priceasc'}}selected{{/if}}>{{lang 'sorter.price_asc'}}</option>\n                    <option value=\"pricedesc\" {{#if sort '===' 'pricedesc'}}selected{{/if}}>{{lang 'sorter.price_desc'}}</option>\n                  </select>\n                </span>\n              </span>\n            </label>\n          </div>\n        </form>\n      </div>\n    {{/if}}\n  </nav>\n{{/if}}\n"}
