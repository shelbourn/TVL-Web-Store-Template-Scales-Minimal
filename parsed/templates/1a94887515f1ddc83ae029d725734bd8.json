{"components/product/product-single-reviews":"<header class=\"product-single-reviews-header product-single-section-header\">\n<h2 class=\"product-single-reviews-header-title section-title\">\n  {{lang 'product.reviews.heading'}}\n</h2>\n\n  {{#if product.num_reviews '>' 0}}\n    <span class=\"product-single-reviews-header-rating\">\n      {{lang 'product.reviews.total_based_on' score=product.rating numReviews=product.num_reviews}}\n    </span>\n  {{else}}\n    <span class=\"product-single-reviews-header-empty\">\n      {{lang 'product.reviews.no_reviews' }}\n    </span>\n  {{/if}}\n\n  <a href=\"#modal-review-form\" class=\"product-details-review-link\" data-leave-review>\n    <span>{{ lang 'product.reviews.write_review' }}</span>\n  </a>\n</header>\n\n{{> components/reviews/review-list}}\n","components/reviews/review-list":"<div data-product-reviews-list>\n  {{#each product.reviews.list}}\n    {{> components/reviews/review-item}}\n  {{/each}}\n\n  {{#if pagination.reviews.next}}\n    <div class=\"product-reviews-load-more\">\n      <button class=\"product-reviews-load-more-button button\" data-load-more-reviews-button data-load-more-url=\"{{pagination.reviews.next}}\">\n        {{lang 'product.reviews.load_more'}}\n        <svg class=\"product-reviews-loading-icon\"><use xlink:href=\"#icon-loading\"></svg>\n      </button>\n    </div>\n  {{/if}}\n</div>\n","components/reviews/review-item":"<article class=\"product-single-review-item\" itemprop=\"review\" itemscope itemtype=\"http://schema.org/Review\">\n  <header class=\"product-single-review-item-header\">\n    <span class=\"product-single-review-item-meta\">\n      <meta itemprop=\"author\" content=\"{{name}}\">\n      {{lang 'product.reviews.written_by_on' name=name date=date}}\n    </span>\n\n    <div class=\"product-single-review-item-stars\" itemprop=\"reviewRating\" itemscope itemtype=\"http://schema.org/Rating\">\n      {{> components/reviews/ratings rating=rating size=\"medium\"}}\n      <span class=\"product-single-review-item-score show-for-sr\" itemprop=\"ratingValue\">{{rating}}/5</span>\n    </div>\n\n    <h3 class=\"product-single-review-item-title\">{{title}}</h3>\n  </header>\n\n  <section class=\"product-single-review-item-body\">\n    <p itemprop=\"reviewBody\">{{text}}</p>\n  </section>\n</article>\n","components/reviews/ratings":"<div class=\"rating-stars\" aria-hidden=\"true\">\n  {{#for 1 5}}\n    {{#if ../this.rating '>=' $index}}\n      <svg class=\"star star-full\">\n        <use xlink:href=\"#icon-star\">\n      </svg>\n    {{else}}\n      <svg class=\"star star-empty\">\n        <use xlink:href=\"#icon-star\">\n      </svg>\n    {{/if}}\n  {{/for}}\n</div>\n"}
